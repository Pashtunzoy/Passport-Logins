<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>NodeJs Logins</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/materialize.css" >
    <link rel='stylesheet'  href='/stylesheets/style.css' >
  </head>
  <body>
    <header>
      <nav>
        <a href="#" class="brand-logo">NodeJS Logins</a>
        <ul id="slide-out" class="side-nav">
          <% if (login) {%>
            <li><a href="/signout" class="signout">Sing Out</a></li>
            <li><a href="/users">Profile</a></li>
          <%} else {%>
            <li class="no-padding">
              <ul class="collapsible collapsible-accordion">
                <li>
                  <a class="collapsible-header">Local<i class="mdi-navigation-arrow-drop-down"></i></a>
                  <div class="collapsible-body">
                    <ul>
                      <li><a href="/login">Sign In</a></li>
                      <li class="divider"></li>
                      <li class="divider"></li>
                      <li><a href="/signup">Sign Up</a></li>
                    </ul>
                  </div>
                </li>
              </ul>
            </li>
            <li><a href="/auth/facebook">Facebook</a></li>
            <li><a href="/auth/google">Google</a></li>
            <li><a href="/auth/twitter">Twitter</a></li>
            <li><a href="/auth/github">Github</a></li>
          <% } %>
        </ul>
        <ul class="right hide-on-med-and-down">
          <ul id="dropdown1" class="dropdown-content">
            <% if (login) {%>
              <li class="divider"></li>
              <li><a href="/signout" class="signout">Sing Out</a></li>
            <%} else {%>
              <li><a href="/login">Sign In</a></li>
              <li class="divider"></li>
              <li class="divider"></li>
              <li><a href="/signup">Sign Up</a></li>
            <% } %>
          </ul>
          <% if (login) {%>
            <li><a href="/signout" class="signout">Sing Out</a></li>
            <li><a href="/users">Profile</a></li>
          <%} else {%>
            <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Local<i class="material-icons right">arrow_drop_down</i></a></li>
            <li><a href="/auth/facebook">Facebook</a></li>
            <li><a href="/auth/google">Google</a></li>
            <li><a href="/auth/twitter">Twitter</a></li>
            <li><a href="/auth/github">Github</a></li>
          <% } %>
        </ul>

        <a href="#" data-activates="slide-out" class="button-collapse"><i class="mdi-navigation-menu"></i></a>
      </nav>
    </header>
    <div class="container">
      <%- body %>
    </div>
    <script src="/javascripts/jquery.min.js"></script>
    <script src="/javascripts/materialize.js"></script>
    <script src="/javascripts/main.js"></script>
  </body>
</html>
